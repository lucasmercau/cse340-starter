<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
<%  }) %>
   </ul>
<% } %>
<form action="/account/update" method="post">
    <fieldset>
        <h2>Update Account</h2>
        
        <label class="top">First Name: <input type="text" name="account_firstname" required value="<%= locals.accountData.account_firstname %>"></label>
        <label class="top">Last Name: <input type="text" name="account_lastname" required value="<%= locals.accountData.account_lastname %>"></label> 
        <label class="top">Email Address: <input type="email" name="account_email" id="email" required value="<%= locals.accountData.account_email %>"></label>
        <br>
        <div class="submitBtn2">
            <input type="submit" value="Update">
        </div>
        <input type="hidden" name="account_id"
        <% if(locals.accountData.account_id) { %> value="<%= locals.accountData.account_id %>"
        <% } %>>
    </fieldset>
</form>
<br>
<form action="/account/updatepassword" method="post">
    <fieldset>
        <h2>Update Password</h2>
        
        <label class="top">Password: <input type="password" name="account_password" id="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required></label>
        <span><i>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</i></span> 
        <div class="leftPswrd">
            <span id="pswdBtn">Show Password</span>
        </div>
        <br>
        <div class="submitBtn2">
            <input type="submit" value="Change Password">
        </div>
        <input type="hidden" name="account_id"
        <% if(locals.accountData.account_id) { %> value="<%= locals.accountData.account_id %>"
        <% } %>>
    </fieldset>
</form>
        

<script src="../../js/password.js"></script>
