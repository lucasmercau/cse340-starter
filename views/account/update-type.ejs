<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
<%  }) %>
   </ul>
<% } %>
<div class="center">
    <div id="form-div">
        <form action="/account/updatetype" method="post">
            <fieldset>
                <h2>Update Account Type</h2>
                <label class="top">Email: <%- emaillist %></label>
                <label class="top">Type: 
                    <select name="account_type" id="account_type" required>
                        <option value=''>Choose a Type</option>
                        <option value="Client">Client</option>
                        <option value="Employee">Employee</option>
                        <option value="Admin">Admin</option>
                    </select>
                </label>
                <br>
                <div class="submitBtn2">
                    <input type="submit" value="Update Account Type">
                </div>
                
            </fieldset>
        </form>

    </div>
</div>